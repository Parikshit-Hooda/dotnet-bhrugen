@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Category List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pt-4">
            
            <div class="col-6">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create Category</a>
            </div>
        </div>
    </div>

    <h1>Category List</h1>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    Edit
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Category? obj in Model.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>
                        Name: @obj.Name
                    </td>
                    <td>
                        DisplayOrder: @obj.DisplayOrder
                    </td>
                    <td>
                        <div><a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit </a></div>
                        <div><a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete </a></div>


                    </td>
                </tr>
            }

        </tbody>

    </table>
</div>
