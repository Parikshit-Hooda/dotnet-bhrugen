@page
@model BulkyRazorWeb_Temp.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                category list
            </h2>
        </div>
        <div class="col-6">
            <a asp-page="/Categories/Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create Category</a>
        </div>
    </div>
</div>

<h1>Category List</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Edit
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.categoryList.OrderBy(x => x.DisplayOrder))
        {
            <tr>
                <td>
                    Name: @obj.Name
                </td>
                <td>
                    DisplayOrder: @obj.DisplayOrder
                </td>
                <td>
                    <div><a asp-page="/Categories/Edit" asp-route-Id="@obj.Id"><i class="bi bi-pencil-square"></i> Edit </a></div>
                    <div><a asp-page="/Categories/Delete" asp-route-Id="@obj.Id"><i class="bi bi-trash-fill"></i> Delete </a></div>


                </td>
            </tr>
        }

    </tbody>

</table>